@model WebThuVien.Models.MuonTraSach

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa thông tin mượn sách</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaMuonTra)

        <div class="form-group">
            Mã thẻ thư viện
            <div class="col-md-10">
                @Html.DropDownList("SoThe", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SoThe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Mã đầu sách
            <div class="col-md-10">
                @Html.DropDownList("MaDauSach", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaDauSach, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Ngày mượn
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayMuon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayMuon, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Ngày trả dự kiến
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayTraDuKien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayTraDuKien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tình trạng
            <div class="col-md-10">
                @Html.EditorFor(model => model.TinhTrang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-info" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay về", "Index")
</div>
