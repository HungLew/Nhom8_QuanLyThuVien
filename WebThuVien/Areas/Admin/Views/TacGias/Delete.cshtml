@model WebThuVien.Models.TacGia

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Delete</h2>

<h3>Bạn có muốn xóa tác giả này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Họ tên tác giả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HotenTG)
        </dd>

        <dt>
            Ngày sinh
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>

        <dt>
            Quốc tịch
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QuocTich)
        </dd>

        <dt>
            Giới thiệu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GioiThieu)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-info" />
            <br />
            @Html.ActionLink("Quay về", "Index")
        </div>
    }
</div>
