@model WebThuVien.Models.NhaXuatBan

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Bạn có muốn xóa nhà xuất bản này?</h3>
<div>
    <h4>NhaXuatBan</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên NXB
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenNXB)
        </dd>

        <dt>
            Địa chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChiNXB)
        </dd>

        <dt>
            Số điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SDT_NXB)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email_NXB)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-info" />
            <br />
            @Html.ActionLink("Quay về", "Index")
        </div>
    }
</div>
